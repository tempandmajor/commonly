{
  "name": "commonlyapp-nextjs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "bff",
    "packages/*"
  ],
  "scripts": {
    "analyze": "node scripts/analyze-codebase.js",
    "analyze:bundle": "ANALYZE=true npm run build",
    "dev": "next dev",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "verify-build": "node scripts/verify-build.cjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "clean": "rimraf .next dist node_modules",
    "clean:cache": "rimraf .next tsconfig.tsbuildinfo",
    "audit:types": "tsc --noEmit --strict",
    "find-any": "grep -r 'any' src --include='*.ts' --include='*.tsx' | wc -l",
    "audit:db": "node scripts/audit-database-schema.cjs",
    "audit:db:full": "npx tsx scripts/audit-supabase-schema.ts",
    "audit:db:ci": "npx tsx scripts/audit-supabase-schema.ts && echo 'Schema audit passed'",
    "audit:sensitive": "node scripts/audit-sensitive-access.cjs",
    "fix:imports": "find src -name '*.ts' -o -name '*.tsx' | xargs sed -i '' 's|@/lib/supabase|@/integrations/supabase/client|g' && find src -name '*.ts' -o -name '*.tsx' | xargs sed -i '' 's|@/services/supabase/database|@/integrations/supabase/client|g'",
    "fix:ts:aggressive": "node scripts/aggressive-ts-fix.js",
    "fix:ts:unused-imports": "node scripts/fix-unused-imports.js",
    "fix:ts:exact-optional": "node scripts/fix-exact-optional-props.js",
    "fix:ts:assertions": "node scripts/add-type-assertions.js",
    "fix:ts:suppress": "node scripts/suppress-errors.js",
    "fix:ts:cleanup": "node scripts/cleanup-syntax-errors.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:install": "npx playwright install --with-deps",
    "gen:db:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > src/lib/database.types.ts || echo 'Install Supabase CLI and set SUPABASE_PROJECT_ID'",
    "test:policies": "echo 'Running policy checks' && psql $DATABASE_URL -v ON_ERROR_STOP=1 -f scripts/pg-policy-tests.sql",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@commonly/api-client": "workspace:*",
    "@commonly/types": "workspace:*",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@hookform/resolvers": "^3.9.0",
    "@livekit/components-react": "^1.5.3",
    "@livekit/components-styles": "^1.0.8",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sentry/react": "^9.13.0",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/supabase-js": "^2.50.0",
    "@tanstack/react-query": "^5.56.2",
    "@types/dompurify": "^3.0.5",
    "@types/react-helmet": "^6.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "idb": "^7.1.1",
    "input-otp": "^1.2.4",
    "livekit-client": "^1.15.5",
    "lodash": "^4.17.21",
    "lucide-react": "^0.462.0",
    "maplibre-gl": "^4.7.1",
    "next": "^15.5.4",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^6.26.2",
    "sonner": "^1.5.0",
    "tailwind-merge": "^3.2.0",
    "uuid": "^11.1.0",
    "web-vitals": "^5.0.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.3"
  },
  "overrides": {
    "axios": "^1.8.2",
    "@babel/runtime": "^7.26.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.45.3",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.16.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autoprefixer": "^10.4.20",
    "dependency-cruiser": "^16.10.3",
    "eslint": "^9.9.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "glob": "^11.0.3",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.3",
    "livekit-server-sdk": "^2.13.1",
    "lovable-tagger": "^1.1.7",
    "madge": "^8.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.44.1",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@vitejs/plugin-react": "^4.3.4",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1"
  }
}
