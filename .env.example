# ================================
# Commonly App - Environment Variables
# ================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ================================
# REQUIRED - Core Application
# ================================

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your-project-id

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ================================
# REQUIRED - Third-Party Services
# ================================

# Google Maps API (REQUIRED for location features)
NEXT_PUBLIC_GOOGLE_API_KEY=your-google-maps-api-key

# Cloudinary (REQUIRED for image uploads)
NEXT_PUBLIC_CLOUDINARY_PRESET=your-upload-preset
NEXT_PUBLIC_CLOUDINARY_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-api-key

# ================================
# RECOMMENDED - Payment Processing
# ================================

# Stripe (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ================================
# RECOMMENDED - Real-time Features
# ================================

# LiveKit (for video/audio streaming)
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit-server.com
NEXT_PUBLIC_LIVEKIT_API_KEY=your-api-key
NEXT_PUBLIC_LIVEKIT_API_SECRET=your-api-secret

# ================================
# OPTIONAL - AI Features
# ================================

# OpenAI (optional, for AI features)
NEXT_PUBLIC_OPENAI_API_KEY=sk-xxxxx

# ================================
# OPTIONAL - Error Tracking
# ================================

# Sentry (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# ================================
# OPTIONAL - Feature Flags
# ================================

# Enable mock data for development
NEXT_PUBLIC_USE_MOCKS=false

# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable debug mode (shows additional logging)
NEXT_PUBLIC_DEBUG_MODE=false

# ================================
# OPTIONAL - Admin Configuration
# ================================

# Admin access code
NEXT_PUBLIC_ADMIN_ACCESS_CODE=COMMONLY-ADMIN-2024

# ================================
# OPTIONAL - Build Information
# ================================

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Build timestamp (auto-generated in CI/CD)
NEXT_PUBLIC_BUILD_TIMESTAMP=

# Git commit hash (auto-generated in CI/CD)
NEXT_PUBLIC_COMMIT_HASH=

# ================================
# DEVELOPMENT ONLY
# ================================

# Environment (development, staging, production)
NODE_ENV=development

# Database URL (for migrations and testing)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# ================================
# NOTES
# ================================
#
# Production Deployment:
# ----------------------
# 1. Never commit .env files with real values
# 2. Use your hosting platform's environment variable UI
# 3. Ensure all REQUIRED variables are set
# 4. Use production keys for Stripe, Supabase, etc.
# 5. Enable error tracking (Sentry recommended)
#
# Local Development:
# ------------------
# 1. Copy this file to .env.local
# 2. Fill in your development keys
# 3. Use test mode for Stripe (pk_test_...)
# 4. Use development Supabase project
#
# Variable Naming:
# ----------------
# - NEXT_PUBLIC_* = Available in browser
# - No prefix = Server-side only
#
# Security:
# ---------
# - Never expose secret keys in NEXT_PUBLIC_* variables
# - Rotate keys regularly
# - Use different keys for dev/staging/production
#
# For more information:
# - Supabase: https://supabase.com/docs
# - Next.js Env Vars: https://nextjs.org/docs/app/building-your-application/configuring/environment-variables
#